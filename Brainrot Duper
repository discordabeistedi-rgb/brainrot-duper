-- Function to find all secret and OG brainrots in player's inventory
local function findSecretBrainrots()
    local brainrots = {}
    local backpack = player:FindFirstChild("Backpack")
    local character = player.Character
    
    local secretKeywords = {"Secret", "OG", "Rare", "Limited", "Exclusive", "Golden", "Diamond", "Rainbow"}
    
    -- Check backpack
    if backpack then
        for _, item in pairs(backpack:GetChildren()) do
            if item:IsA("Tool") then
                for _, keyword in pairs(secretKeywords) do
                    if string.find(item.Name:lower(), keyword:lower()) then
                        table.insert(brainrots, item.Name)
                        break
                    end
                end
            end
        end
    end
    
    -- Check equipped items
    if character then
        for _, item in pairs(character:GetChildren()) do
            if item:IsA("Tool") then
                for _, keyword in pairs(secretKeywords) do
                    if string.find(item.Name:lower(), keyword:lower()) then
                        if not table.find(brainrots, item.Name) then
                            table.insert(brainrots, item.Name)
                        end
                        break
                    end
                end
            end
        end
    end
    
    return brainrots
end

